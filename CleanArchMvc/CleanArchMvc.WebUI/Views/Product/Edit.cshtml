

@model CleanArchMvc.Application.DTOs.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<h2>@ViewData["Title"]</h2>

<div style="width:80%">
    <form asp-controller="Product" asp-action="Edit" enctype="multipart/form-data">

        <div class="row" style="display:flex">
            <div class="col-md-8 pr-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="col-md-2 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Stok" class="col-md-2 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Stok" class="form-control" />
                        <span asp-validation-for="Stok" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="col-md-2 control-label"></label>
                    <div class="col-md-8">
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="hidden" asp-for="Image" />
                        <input type="submit" value="Edit" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <div>
                        <input asp-for="Image" type="file" name="files" id="upload" style="margin-bottom:10px" />
                        <img id="imgUpload" src="~/Resources/Images/@Model.Image" width="300" height="300" onclick="files.click()"/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

